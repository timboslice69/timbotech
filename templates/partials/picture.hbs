    <source media="(max-width: 520px)" srcset="{{cloudinaryUrl photo width=520}} 1x, {{cloudinaryUrl photo width=1040}} 2x, {{cloudinaryUrl photo width=1560}} 3x">
    <!-- Normal Screen Image -->
    <source media="" srcset="{{cloudinaryUrl photo width=720}} 1x, {{cloudinaryUrl photo width=1480}} 2x, {{cloudinaryUrl photo width=2160}} 3x">
    <!-- Default Image-->
    <img srcset="{{cloudinaryUrl photo width=720}} 1x, {{cloudinaryUrl photo width=1480}} 2x, {{cloudinaryUrl photo width=2160}} 3x">
</picture>